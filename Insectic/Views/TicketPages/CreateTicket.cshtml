

@model Insectic.Models.TicketJsonModel

@{
    Layout = "_InsecticDefault";

}


@section LinkOne
{
    <link rel="stylesheet" href="/css/CreateTickets.css">
}

@section Title
{Create Ticket}

<img class="tac3"src="/img/pngegg.png" alt="">
<img class="tac4"src="/img/pngegg(1).png" alt=""> 
<form method="post">
    <div>
        <h1>Create A Ticket</h1>
    </div>
    <div class="first-row row">
        <div>
            <label asp-for="Category">BugCategory</label>
            <select name="Category" id="Category">
                <option value="0">Bug Category</option>
                <option value="Functionality Error">Functionality Error</option>
                <option value="Logic Error">Logic Error</option>
                <option value="Syntactic Error">Syntactic Error</option>
                <option value="Error Handling Error">Error Handling Error</option>
                <option value="Calculation Error">Calculation Error</option>
                <option value="Security Defect">Security Defect</option>
            </select>
        </div>
        <div class=custom-button>
            <label asp-for="Priority">Priority</label>
            <select name="Priority" id="Priority">
                <option value="0">Priority</option>
                <option value="Urgent">Urgent</option>
                <option value="High">High</option>
                <option value="Routine">Routine</option>
                <option value="Low">Low</option>
            </select>
        </div>
        <div>
            <label asp-for="IncidentDate">Incident Date</label>
            <input type="datetime-local" id="IncidentDate" name="IncidentDate">
        </div>
        <div class="custom-button">
            <label asp-for="Status">CurrentStatus</label>
            <select name="Status" id="Status">
                <option value="0">Current Status</option>
                <option value="Awtg Assignment">Awtg Assignment</option>
                <option value="In Progress">In Progress</option>
                <option value="Pending Closure">Pending Closure</option>
                <option value="Closed">Close</option>
            </select>
        </div>
    </div>

    <div class="second-row row">
        <div class="custom-button">
            <label for="PlaceHolder">place Holder</label>
            <select name="PlaceHolder" id="PlaceHolder">
                <option value="0">Current Status</option>
                <option value="1">Awtg Assignment</option>
                <option value="2">In Progress</option>
                <option value="3">Pending Closure</option>
                <option value="4">Close</option>
            </select>
        </div>

        <div>
            <label asp-for="DueDate">Due Date</label>
            <input type="datetime-local" id="DueDate" name="DueDate">
        </div>

        <div>
            <label asp-for="PhoneNumber">Contact Number</label>
            <input type="tel" id="PhoneNumer" name="PhoneNumber" placeholder="123-456-7890"
                   pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
        </div>

        <div>
            <label asp-for="Email">Email</label>
            <input type="email" name="Email" id="Email" placeholder="work Email addresss">
        </div>
    </div>
    <div class="third-row">
        <label asp-for="TicketDescription">Ticket Description:</label>
        <textarea name="TicketDescription" cols="105" rows="10"
                  placeholder="Please enter detailed account of current issue and actions already taken."></textarea>
        <input type="submit" class="submit-button" value="Submit Ticket">
    </div>

</form>