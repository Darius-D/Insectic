
@{
    Layout = null;
}
@model Insectic.Models.ViewModels.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Registration.css">
    <title>Login</title>
</head>
<body>
    <div class="body-container">
        <div class="register-container">
            <h2>Login</h2>
            <form method="post" asp-action="Login">
                <div class="inputbox">
                    <input asp-for="UserName" class="top-input" type="email" placeholder="Email" required>
                </div>
                <div class="inputbox">
                    <input asp-for="Password" class="top-input" type="password" placeholder="Password" required>
                </div>
                <input class="submit" type="submit" value="Login">
                <a asp-action="Register" class="link-text">Don't have an account? Sign up</a>
            </form>
        </div>
    </div>
</body>
</html>